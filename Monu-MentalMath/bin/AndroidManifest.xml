<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.michael.evan.monu_mentalmath"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="ca.michael.evan.monu_mentalmath.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.michael.evan.monu_mentalmath.MainMenu"
            android:label="@string/title_activity_mental_math" >
        </activity>
        <activity
            android:name="ca.michael.evan.monu_mentalmath.MentalMath"
            android:label="@string/title_activity_mental_math"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="ca.michael.evan.monu_mentalmath.FleetingFigures"
            android:label="@string/title_activity_fleeting_figures"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="ca.michael.evan.monu_mentalmath.GameOver"
            android:label="@string/title_activity_game_over"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="ca.michael.evan.monu_mentalmath.ScoreScreen"
            android:label="@string/title_activity_score_screen" >
        </activity>
    </application>

</manifest>